{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./plugin/build",
    "rootDir": "./plugin/src",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "noEmit": false
  },
  "include": ["plugin/src/**/*"],
  "exclude": ["node_modules", "plugin/build"]
}
